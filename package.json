{
    "name": "lossless-cut",
    "version": "1.5.1",
    "description": "Lossless video cutter and merger",
    "author": "Ai Chen <nobody@cloudseat.net>",
    "copyright": "Copyright (c) 2019, Cloudseat",
    "license": "MIT",
    "main": "app/main.js",
    "scripts": {
        "start": "electron .",
        "build:linux": "electron-builder -l",
        "build:win": "electron-builder -w"
    },
    "build": {
        "appId": "net.cloudseat.lossless-cut",
        "win": {
            "target": [
                "nsis"
